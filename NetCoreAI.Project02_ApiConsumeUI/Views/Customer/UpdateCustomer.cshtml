@model NetCoreAI.Project02_ApiConsumeUI.Dtos.GetByIdCustomerDto


@{
	Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<form method="post" asp-action="CreateCustomer">
	<div class="container ">
		<br><br />
		<input type="hidden" asp-for="CustomerId" />"
